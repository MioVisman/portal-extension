{
    "name": "miovisman/portal-extension",
    "type": "forkbb-extension",
    "description": "Portal for forkbb.",
    "homepage": "https://forkbb.ru/",
    "version": "0.9.0",
    "time": "2026-02-28",
    "license": "MIT",
    "authors": [
        {
            "name": "Visman",
            "email": "mio.visman@yandex.ru",
            "homepage": "https://github.com/MioVisman"
        }
    ],
    "require": {
        "php": ">=8.0.0",
        "forkbb/forkbb": ">=0.0093"
    },
    "extra": {
        "display-name": "Portal extension",
        "requirements": {
            "php": ">=8.0.0",
            "forkbb": ">=93"
        },
        "symlinks": [
            {
                "type": "public",
                "target": "style",
                "link": "style/other/portal-extension"
            }
        ],
        "templates": [
            {
                "type": "pre",
                "template": "layouts/main",
                "name": "bodyStart",
                "priority": -2147483648,
                "file": "templates/_pre/mainBodyStart.forkbb.php"
            },
            {
                "type": "pre",
                "template": "layouts/main",
                "name": "headerBefore",
                "priority": 2147483647,
                "file": "templates/_pre/mainHeaderBefore.forkbb.php"
            }
        ],
        "autoload": [
            {
                "prefix": "MioVisman\\PortalExtension\\",
                "path": "src/"
            }
        ],
        "actions": "\\MioVisman\\PortalExtension\\Actions\\Actions",
        "config": {
            "shared": {
                "portalPanels": "\\MioVisman\\PortalExtension\\Models\\PortalPanel\\Panels::class",
                "PPanels/save": "\\MioVisman\\PortalExtension\\Models\\PortalPanel\\Save::class"
            },
            "multiple": {
                "Portal": "\\MioVisman\\PortalExtension\\Models\\Pages\\Portal::class",
                "AdminPortal": "\\MioVisman\\PortalExtension\\Models\\Pages\\Admin\\Portal::class",
                "PortalPanelModel": "\\MioVisman\\PortalExtension\\Models\\PortalPanel\\Panel::class"
            }
        },
        "events" : [
            {
                "name": "bootstrap:start",
                "priority": 10,
                "listener": "\\MioVisman\\PortalExtension\\Listeners\\Listener1"
            },
            {
                "name": "Controllers\\Routing:routing:beforeRoute",
                "priority": 10,
                "listener": "\\MioVisman\\PortalExtension\\Listeners\\Listener1"
            },
            {
                "name": "Models\\Page:boardNavigation:after",
                "priority": 10,
                "listener": "\\MioVisman\\PortalExtension\\Listeners\\Listener1"
            },
            {
                "name": "Models\\Page:prepare:after",
                "priority": 10,
                "listener": "\\MioVisman\\PortalExtension\\Listeners\\Listener1"
            },
            {
                "name": "Models\\Page:crumbs:after",
                "priority": 10,
                "listener": "\\MioVisman\\PortalExtension\\Listeners\\Listener1"
            },
            {
                "name": "Pages\\Admin:aNavigation:after",
                "priority": 10,
                "listener": "\\MioVisman\\PortalExtension\\Listeners\\Listener2"
            }
        ]
    }
}
